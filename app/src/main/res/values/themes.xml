<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.EfficiLog" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorAccent">@color/soft_blue</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/background_light</item>
        <item name="colorOnBackground">@color/text_light</item>
        <item name="colorOnSurface">@color/text_light</item>

        <!-- Light status and navigation bar -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
</resources>