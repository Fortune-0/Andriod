<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_onboarding_gradient"
    android:orientation="vertical"
    android:gravity="center">

    <!-- Skip Button -->
    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:text="Skip"
        android:textColor="#333333"
        android:textSize="16sp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- Progress Indicator -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="32dp"
        android:gravity="center">

        <View
            android:layout_width="32dp"
            android:layout_height="4dp"
            android:background="#FF8C42"
            android:layout_marginEnd="8dp" />

        <View
            android:layout_width="32dp"
            android:layout_height="4dp"
            android:background="#E0E0E0"
            android:layout_marginEnd="8dp" />

        <View
            android:layout_width="32dp"
            android:layout_height="4dp"
            android:background="#E0E0E0"
            android:layout_marginEnd="8dp" />

        <View
            android:layout_width="32dp"
            android:layout_height="4dp"
            android:background="#E0E0E0" />

    </LinearLayout>

    <!-- Main Content Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to EfficiLog"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your complete solution for efficient job tracking and management in the oil and gas industry."
                android:textSize="16sp"
                android:textColor="#666666"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="32dp" />

            <!-- Icon Container -->
            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/white_background"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/bar_graph"
                    android:contentDescription="Chart icon" />

            </FrameLayout>

            <!-- Description Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EfficiLog helps you track and manage jobs, monitor performance, and streamline your workflow."
                android:textSize="16sp"
                android:textColor="#666666"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="32dp" />

            <!-- Continue Button -->
            <Button
                android:id="@+id/btn_continue"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:text="Continue"
                android:textColor="#FFFFFF"
                android:textSize="14dp"
                android:textStyle="bold"
                android:background="@drawable/btn_primary"
                android:elevation="2dp"
                android:stateListAnimator="@null" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>