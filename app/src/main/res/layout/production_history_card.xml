<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@color/white"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/task_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task: Loading..."
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/thread_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thread Type: Loading..."
        android:textSize="14sp"
        android:textColor="@color/grey" />

    <TextView
        android:id="@+id/task_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size: Loading..."
        android:textSize="14sp"
        android:textColor="@color/grey" />

    <TextView
        android:id="@+id/task_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number: Loading..."
        android:textSize="14sp"
        android:textColor="@color/grey" />

    <TextView
        android:id="@+id/task_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timestamp: Loading..."
        android:textSize="14sp"
        android:textColor="@color/grey" />
</LinearLayout>
