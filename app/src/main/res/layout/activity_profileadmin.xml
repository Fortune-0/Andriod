<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ProfileActivityAdmin">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/back_buttonAdmin"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_back_button"
        android:contentDescription="Back"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Profile Title -->
    <TextView
        android:id="@+id/profile_titleAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Staff Profile"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/back_buttonAdmin"
        app:layout_constraintTop_toTopOf="@id/back_buttonAdmin" />

    <!-- Staff Name -->
    <TextView
        android:id="@+id/staff_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: Loading..."
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/profile_titleAdmin"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Staff Role -->
    <TextView
        android:id="@+id/staff_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Role: Loading..."
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/staff_name"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Staff Status -->
    <TextView
        android:id="@+id/staff_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Loading..."
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/staff_role"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Last Active -->
    <TextView
        android:id="@+id/staff_last_activeAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Active: Loading..."
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/staff_status"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Last Active: Today"/>

    <!-- Production Rate -->
    <TextView
        android:id="@+id/staff_production_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Production Rate: Loading..."
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/staff_last_activeAdmin"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Production Rate: 85%"/>

</androidx.constraintlayout.widget.ConstraintLayout>
