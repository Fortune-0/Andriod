<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_onboarding_gradient"
    android:orientation="vertical"
    android:gravity="center">

    <!-- Skip Button (Hidden on final screen) -->
    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:text="Skip"
        android:textColor="#333333"
        android:textSize="16sp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone" />

    <!-- Progress Indicator (All Complete) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="32dp"
        android:gravity="center">

        <View
            android:layout_width="32dp"
            android:layout_height="4dp"
            android:background="#FF8C42"
            android:layout_marginEnd="8dp" />

        <View
            android:layout_width="32dp"
            android:layout_height="4dp"
            android:background="#FF8C42"
            android:layout_marginEnd="8dp" />

        <View
            android:layout_width="32dp"
            android:layout_height="4dp"
            android:background="#FF8C42"
            android:layout_marginEnd="8dp" />

        <View
            android:layout_width="32dp"
            android:layout_height="4dp"
            android:background="#FF8C42" />

    </LinearLayout>

    <!-- Main Content Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You're All Set!"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start using EfficiLog to streamline your workflow."
                android:textSize="16sp"
                android:textColor="#666666"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="32dp" />

            <!-- Success Icon Container -->
            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/bg_icon_green"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_checkmark"
                    android:contentDescription="Success checkmark" />

            </FrameLayout>

            <!-- Dynamic Ready Message - This will be updated programmatically -->
            <TextView
                android:id="@+id/tv_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You're ready to use EfficiLog as a Staff Member"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <!-- Settings Note -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You can change your preferences anytime in the settings."
                android:textSize="14sp"
                android:textColor="#666666"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="32dp" />

            <!-- Role-specific Feature Preview (Optional Enhancement) -->
            <LinearLayout
                android:id="@+id/ll_feature_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F8F9FA"
                android:padding="16dp"
                android:layout_marginBottom="32dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_features_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Key Features:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_features_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

            <!-- Navigation Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Back Button -->
                <Button
                    android:id="@+id/btn_back"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="16dp"
                    android:text="Back"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_back_arrow"
                    android:drawablePadding="8dp"
                    android:gravity="center" />

                <!-- Get Started Button -->
                <Button
                    android:id="@+id/btn_get_started"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Get Started"
                    android:textColor="#FFFFFF"
                    android:textSize="12.4sp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_primary"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:elevation="2dp"
                    android:stateListAnimator="@null" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>