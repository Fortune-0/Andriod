<!--                        android:layout_width="48dp"-->
<!--                        android:layout_height="48dp"-->
<!--                        android:src="@drawable/ic_settings"-->
<!--                        android:background="@drawable/bg_feature_icon_green"-->
<!--                        android:padding="12dp"-->
<!--                        android:layout_marginEnd="16dp"-->
<!--                        android:contentDescription="System configuration icon" />-->

<!--                    &lt;!&ndash; Feature Content &ndash;&gt;-->
<!--                    <LinearLayout-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_weight="1"-->
<!--                        android:orientation="vertical">-->

<!--                        <TextView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="System Configuration"-->
<!--                            android:textSize="16sp"-->
<!--                            android:textStyle="bold"-->
<!--                            android:textColor="#333333"-->
<!--                            android:layout_marginBottom="4dp" />-->

<!--                        <TextView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="Configure job types, workflow settings, and customize the application."-->
<!--                            android:textSize="14sp"-->
<!--                            android:textColor="#666666"-->
<!--                            android:lineSpacingExtra="2dp" />-->

<!--                    </LinearLayout>-->

<!--                </LinearLayout>-->

            </LinearLayout>

            <!-- Navigation Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Back Button -->
                <Button
                    android:id="@+id/btn_back"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="16dp"
                    android:text="Back"
                    android:textColor="#666666"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_back_arrow"
                    android:drawablePadding="8dp"
                    android:gravity="center" />

                <!-- Continue Button -->
                <Button
                    android:id="@+id/btn_continue"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Next"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_primary"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:elevation="2dp"
                    android:stateListAnimator="@null" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>